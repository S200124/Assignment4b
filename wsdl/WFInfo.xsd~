<?xml version="1.0" encoding="UTF-8"?>
<xs:schema version="1.0" targetNamespace="http://pad.polito.it/WorkflowSearching" xmlns:tns="http://pad.polito.it/WorkflowSearching" xmlns:xs="http://www.w3.org/2001/XMLSchema">

	<xs:element name="wfInfo" type="tns:wfInfoType"></xs:element>
	<xs:element name="actionName" type="xs:string"></xs:element>
	<xs:element name="role" type="xs:string"></xs:element>
	<xs:element name="process" type="tns:processType" maxOccurs="unbounded" minOccurs="0"></xs:element>
    
	<xs:complexType name="wfInfoType">
		<xs:sequence>
			<xs:element name="workflow" type="tns:workflowType" maxOccurs="unbounded" minOccurs="0"></xs:element>
		</xs:sequence>
	</xs:complexType>

	<xs:complexType name="workflowType">
		<xs:choice maxOccurs="unbounded">
			<xs:element name="action" type="tns:actionType" maxOccurs="unbounded" minOccurs="1"></xs:element>
			<xs:element ref="tns:process" />
		</xs:choice>
		<xs:attribute name="name" type="xs:string" use="required"></xs:attribute>
	</xs:complexType>

	<xs:complexType name="actionType">
		<xs:choice maxOccurs="unbounded">
			<xs:element ref="tns:role" />
			<xs:choice maxOccurs="1" minOccurs="0">
				<xs:element name="followingActions" type="tns:followingActionsType"></xs:element>
				<xs:element name="nestedWorkflow" type="xs:string"></xs:element>
			</xs:choice>
		</xs:choice>
		<xs:attribute name="name" type="xs:string" use="required"></xs:attribute>
		<xs:attribute name="type" type="tns:typeEnumType" use="required"></xs:attribute>
		<xs:attribute name="automInst" type="xs:boolean" use="required"></xs:attribute>
	</xs:complexType>

	<xs:complexType name="processType">
		<xs:sequence>
			<xs:element name="actionStatus" type="tns:actionStatusType" maxOccurs="unbounded" minOccurs="1"></xs:element>
		</xs:sequence>
		<xs:attribute name="startAt" type="xs:string" use="required"></xs:attribute>
	</xs:complexType>

	<xs:complexType name="actionStatusType">
		<xs:choice maxOccurs="unbounded">
			<xs:element name="actor" type="tns:actorType" maxOccurs="1" minOccurs="0"></xs:element>
			<xs:element ref="tns:actionName"/>
		</xs:choice>
		<xs:attribute name="terminatedAt" type="xs:string"></xs:attribute>
	</xs:complexType>

	<xs:complexType name="followingActionsType">
		<xs:sequence>
			<xs:element ref="tns:actionName" maxOccurs="unbounded" minOccurs="1" />
		</xs:sequence>
	</xs:complexType>

	<xs:complexType name="actorType">
		<xs:sequence>
			<xs:element ref="tns:role" />
		</xs:sequence>
		<xs:attribute name="name" type="xs:string" use="required"></xs:attribute>
	</xs:complexType>

	<xs:simpleType name="typeEnumType">
		<xs:restriction base="xs:string">
			<xs:enumeration value="simple"/>
			<xs:enumeration value="process"/>
		</xs:restriction>
	</xs:simpleType>

</xs:schema>
